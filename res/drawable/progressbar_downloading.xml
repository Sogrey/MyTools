<?xml version="1.0" encoding="utf-8"?>  
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">    
	 <!--  设置进度条背景色和前景色样式 ， 放在 drawable 文件夹下  -->                 
    <!--  设置背景色（天蓝色）  -->                 
    <item  android:id="@android:id/background" >                
    <shape>  
        <corners android:radius="5dip" />                 
            <gradient android:startColor="#ff000066"                
                  android:endColor="#ff000066" />                
    </shape>               
    </item>                                  
      
    <!--  设置进度条颜色  -->                 
    <item  android:id="@android:id/progress" >                
    <clip>                 
        <shape>                  
            <corners android:radius="5dip" />                  
        <gradient  android:startColor="#ff336611"                 
               android:endColor="#ff336611" />                 
        </shape>                
    </clip>               
    </item>              
      
    </layer-list>  